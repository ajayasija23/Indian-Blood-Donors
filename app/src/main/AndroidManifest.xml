<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asijaandroidsolution.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blood_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/blood_app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.result.SearchResult"
            android:theme="@style/SearchResultTheme"
            android:parentActivityName=".activity.home.HomeActivity"></activity>
        <activity
            android:name=".activity.home.HomeActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name=".activity.verify.VerifyActivity"
            android:label="@string/title_activity_verify" />
        <activity android:name=".activity.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8127434234485566~6012942722"/>
    </application>

</manifest>