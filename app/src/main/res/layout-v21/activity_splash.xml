<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/textViewTitle"
        android:transitionName="logo_text"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_sixty"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="@string/logo_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dp_28" />

    <TextView
        android:id="@+id/textViewSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_ten"
        android:transitionName="logo_subtitle"
        android:layout_marginRight="@dimen/dp_fifty"
        android:fontFamily="@font/alex_brush"
        android:text="@string/text_slogan"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/dp_two_hundred"
        android:layout_height="@dimen/dp_two_hundred"
        android:id="@+id/image_logo"
        android:background="@drawable/spinner_bg_accent"
        android:padding="@dimen/dp_ten"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_sixty"
        android:src="@drawable/blood_logo"
        android:transitionName="blood_logo"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created By"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_hundred"
                android:textColor="@color/colorPrimary"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajay Asija"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_fifty"
                android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>

</LinearLayout>