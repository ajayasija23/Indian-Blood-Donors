<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_two_hundred"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_hundred"
        android:layout_height="@dimen/dp_hundred"
        android:layout_marginTop="@dimen/dp_twenty"
        android:contentDescription="@string/nav_header_desc"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:layout_marginLeft="@dimen/dp_thirty"
        android:foregroundGravity="center"
        android:background="@drawable/spinner_bg_accent"
        app:srcCompat="@drawable/blood_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/logo_text"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>