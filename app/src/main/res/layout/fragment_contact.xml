<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_thirty"
        android:text="Blood Bank Tohana"
        android:id="@+id/address"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/address"
        android:layout_marginTop="@dimen/dp_thirty">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:layout_weight="0.6"
                android:textAlignment="textEnd"
                android:paddingHorizontal="@dimen/dp_thirty"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9255383767"
                android:layout_weight="0.4"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:paddingHorizontal="@dimen/dp_thirty"
                android:id="@+id/contact_info"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/address"
        android:layout_marginTop="@dimen/dp_sixty">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternate No:"
                android:layout_weight="0.6"
                android:textAlignment="textEnd"
                android:paddingHorizontal="@dimen/dp_thirty"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7015166413"
                android:layout_weight="0.4"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:paddingHorizontal="@dimen/dp_thirty"
                android:id="@+id/alternate_no"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/address"
        android:layout_marginTop="@dimen/dp_90">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_weight="0.6"
                android:textAlignment="textEnd"
                android:paddingHorizontal="@dimen/dp_thirty" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ajayasija23@gmail.com"
                android:layout_weight="0.4"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:paddingHorizontal="@dimen/dp_thirty"
                android:id="@+id/email_address"/>
    </LinearLayout>

</RelativeLayout>